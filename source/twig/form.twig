{% extends 'common/layout.twig' %}

{% set page = 'form' %}
{% set title = 'Форма "Pink"' %}

{% block header %}
  <h1 class="visually-hidden">Форма "Pink"</h1>
  <h2 class="page-header__title-form center">Конкурс на самое <br> безбашенное <br> путешествие с Пинк</h2>
{% endblock %}

{% block main %}
  <main class="page-form">
    <section class="form">
      <!-- Форма для пользователя -->
      <form class="form__user" action="https://echo.htmlacademy.ru/" method="post">
        <h3 class="form__title center">Поделитесь своей историей и получите шанс выиграть ценный приз — 1000 миль на
          вашу бонусную карту! <br class="br-tablet"> <span>Пожалуйста, заполните форму ниже:</span></h3>
        <!-- ФИО пользователя -->
        <div class="form__wrapper form__wrapper--name center">
          <fieldset class="form__user-item form__user-item--name">
            <div class="form__user-item-input form__user-item-input--surname">
              <label class="form__user-label form__user-label--name" for="form-surname">Фамилия:</label>
              <input class="form__user-input" type="text" placeholder="Укажите фамилию *" name="surname" id="form-surname"
                required>
            </div>
            <div class="form__user-item-input form__user-item-input--name">
              <label class="form__user-label form__user-label--name" for="form-name">Имя:</label>
              <input class="form__user-input" type="text" placeholder="Введите ваше имя *" name="name" id="form-name"
                required>
            </div>
            <div class="form__user-item-input form__user-item-input--patronymic">
              <label class="form__user-label form__user-label--name" for="form-patronymic">Отчество:</label>
              <input class="form__user-input" type="text" placeholder="Ну и отчество тоже" name="patronymic"
                id="form-patronymic" required>
            </div>
          </fieldset>
        </div>
        <!-- Достижения (checkbox) -->
        <div class="form__wrapper form__wrapper--progress center">
          <fieldset class="form__user-item form__user-item--progress">
            <legend class="form__user-item-title">Ваши безбашенные <br class="br-mobile"> достижения в путешествии
            </legend>
            <ul class="form__user-progress-list reset-style-list">

              <li class="form__user-progress-item">
                <label class="form__user-control">
                  <input class="visually-hidden form__user-control-input" type="checkbox" name="Сделал селфи с акулой"
                    checked tabindex="-1">
                  <span class="form__user-control-label" tabindex="0">Сделал селфи с акулой</span>
                </label>
              </li>

              <li class="form__user-progress-item">
                <label class="form__user-control">
                  <input class="visually-hidden form__user-control-input" type="checkbox" name="Обгорел на пляже" checked tabindex="-1">
                  <span class="form__user-control-label" tabindex="0">Обгорел на пляже</span>
                </label>
              </li>

              <li class="form__user-progress-item">
                <label class="form__user-control">
                  <input class="visually-hidden form__user-control-input" type="checkbox" name="Видел Чака Норриса" tabindex="-1">
                  <span class="form__user-control-label" tabindex="0">Видел Чака Норриса</span>
                </label>
              </li>

              <li class="form__user-progress-item">
                <label class="form__user-control">
                  <input class="visually-hidden form__user-control-input" type="checkbox" name="Накупил сувениров" tabindex="-1">
                  <span class="form__user-control-label" tabindex="0">Накупил сувениров</span>
                </label>
              </li>

              <li class="form__user-progress-item">
                <label class="form__user-control">
                  <input class="visually-hidden form__user-control-input" type="checkbox" name="Удержал башню" checked tabindex="-1">
                  <span class="form__user-control-label" tabindex="0">Удержал башню</span>
                </label>
              </li>

              <li class="form__user-progress-item">
                <label class="form__user-control">
                  <input class="visually-hidden form__user-control-input" type="checkbox" name="Разгромил отель" tabindex="-1">
                  <span class="form__user-control-label" tabindex="0">Разгромил отель</span>
                </label>
              </li>
            </ul>
          </fieldset>
        </div>
        <!-- Контакты пользователя -->
        <div class="form__wrapper form__wrapper--contact center">
          <fieldset class="form__user-item form__user-item--contact">
            <legend class="form__user-item-title form__user-item-title--contact">Контактная информация</legend>
            <div class="form__user-item-input form__user-item-input--tel">
              <label class="form__user-label form__user-label--contact" for="form-num">Номер телефона</label>
              <input class="form__user-input form__user-input--contact" id="form-num" type="tel"
                placeholder="Номер, пожалуйста" name="phone">
            </div>
            <div class="form__user-item-input form__user-item-input--email">
              <label class="form__user-label form__user-label--contact" for="form-mail">Адрес почты</label>
              <input class="form__user-input form__user-input--contact" id="form-mail" type="email"
                placeholder="Введите почту *" name="email" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" />
            </div>
          </fieldset>
        </div>

        <!-- Выбор приложения (radio) -->
        <div class="form__wrapper form__wrapper--os center">
          <fieldset class="form__user-item form__user-item--os">
            <legend class="form__user-item-title form__user-item-title--os">С каким приложением <br class="br-mobile">
              путешествовали?</legend>
            <ul class="form__user-os-list reset-style-list">

              <li class="form__user-os-item">
                <label class="form__user-os-control">
                  <input class="visually-hidden form__user-os-control-input" type="radio" name="OS" value="iOS" checked tabindex="-1">
                  <span class="form__user-os-control-mark" tabindex="0"></span>
                  <span class="form__user-os-control-label">Pink для iOS</span>
                </label>
              </li>

              <li class="form__user-os-item">
                <label class="form__user-os-control">
                  <input class="visually-hidden form__user-os-control-input" type="radio" name="OS" value="Android"
                    checked tabindex="-1">
                  <span class="form__user-os-control-mark" tabindex="0"></span>
                  <span class="form__user-os-control-label">Pink на Android</span>
                </label>
              </li>

              <li class="form__user-os-item">
                <label class="form__user-os-control">
                  <input class="visually-hidden form__user-os-control-input" type="radio" name="OS" value="Windows Phone"
                    checked tabindex="-1">
                  <span class="form__user-os-control-mark" tabindex="0"></span>
                  <span class="form__user-os-control-label">Windows Phone</span>
                </label>
              </li>
            </ul>
          </fieldset>
        </div>

        <!-- Окно комментариев -->
        <div class="form__wrapper form__wrapper--comment center">
          <fieldset class="form__user-item form__user-item--comment">
            <legend class="form__user-item-title">Опишите свои эмоции</legend>
            <label class="form__user-control form__user-control--comment">
              <textarea class="form__user-comment-area" name="comment"
                placeholder="Можно прям в красках, не стесняясь в выражениях"></textarea>
            </label>
          </fieldset>
        </div>

        <div class="form__button-wrapper center">
          <button class="form__button form__button--green" type="submit">Отправить форму</button>
          <p class="form__prompt"><span>*</span> — обязательные <span class="form__prompt-desktop">для заполнения</span>
            поля</p>
        </div>

      </form>
    </section>
  </main>
{% endblock %}

{% block modal %}
  <div class="modal-err">
    <div class="modal-err__content">
      <h3 class="modal-err__title">Что-то пошло не так</h3>
      <p class="modal-err__text">Проверьте поля, выделенные красным,
        скорее всего вы забыли их заполнить</p>
    </div>
    <div class="modal-err__wrapper-button">
      <button class="modal-err__button" type="button">OK</button>
    </div>
  </div>

  <div class="modal-ok">
    <div class="modal-ok__content">
      <h3 class="modal-ok__title">Ваша заявка отправлена</h3>
      <p class="modal-ok__text">Спасибо за ваше участие, ваша заявка
        уже поступила к нам. В ближайшее время мы рассмотрим <br class="br-tablet"> ее и <br class="br-mobile"> оповестим
        вас.</p>
    </div>
    <div class="modal-ok__wrapper-button">
      <button class="modal-ok__button" type="button">Закрыть окно</button>
    </div>
  </div>
{% endblock %}
