{% set menu = [
  {
    page: 'index',
    url: 'index.html',
    title: 'Главная'
  },
  {
    page: 'catalog',
    url: 'catalog.html',
    title: 'Фотографии'
  },
  {
    page: 'form',
    url: 'form.html',
    title: 'Конкурс'
  },
  {
    page: 'htmlacademy',
    url: 'https://htmlacademy.ru',
    title: 'HTML&nbsp;Academy'
  },
] %}

<!DOCTYPE html>
<html lang="ru">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>HTML Academy: Пинк</title>
  <link rel="stylesheet" href="./css/style.min.css">
  <link rel="icon" href="./img/favicon/favicon-mobile.ico">
  <link rel="icon" type="image/png" sizes="32x32" href="./img/favicon/favicon-mobile-32.ico">
</head>

<body class="page">

  <!-- Header -->
  <header class="page-header page-header--{{ page }}">
    <div class="page-header__nav-wrapper">
      <nav class="page-header__main-nav main-nav">
        <div class="main-nav__logo-wrapper center">
          <!-- Logo Pink -->
          <a class="header-logo" href="index.html" aria-label="Логотип сайта Pink">
            <svg class="header-logo__image header-logo__image--mobile" width="74" height="23" fill="#ffffff">
              <use href="./img/sprite.svg#logo-white-mobile"></use>
            </svg>
            <svg class="header-logo__image header-logo__image--tablet" width="146" height="40" fill="#ffffff">
              <use href="./img/sprite.svg#logo-white-tablet"></use>
            </svg>
            <svg class="header-logo__image header-logo__image--desktop" width="146" height="40" fill="#ffffff">
              <use href="./img/sprite.svg#logo-white-desktop"></use>
            </svg>
          </a>

          <button class="main-nav__toggle" type="button" id="toggle-button" aria-label="Меню"></button>
        </div>
        <!-- Меню -->
        <ul class="main-nav__list reset-style-list active">
          {% for item in menu %}
            <li class="main-nav__item {{ page == item.page ? 'main-nav__item--current' }}">
              <a class="main-nav__link" href="{{ item.url }}">{{ item.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    </div>

    {% block header %}{% endblock %}
  </header>

  <!-- Main -->
  {% block main %}{% endblock %}

  <!-- Footer -->
  <footer class="page-footer">
    <div class="page-footer__wrapper center">
      <a href="index.html" aria-label="Логотип сайта Pink">
        <svg class="page-footer__pink-logo page-footer__pink-logo--visible-tablet" width="145" height="40"
          fill="#283645">
          <use href="./img/sprite.svg#logo-footer-mobile"></use>
        </svg>

        <svg class="page-footer__pink-logo page-footer__pink-logo--visible-desktop" width="147" height="40"
          fill="#283645">
          <use href="./img/sprite.svg#logo-footer-desktop"></use>
        </svg>
      </a>
      <div class="social">
        <ul class="social__list reset-style-list">

          <!-- Твиттер -->
          <li class="social__item">
            <a class="social__link" href="https://twitter.com" aria-label="Twitter">
              <svg class="social__icon" width="18" height="14" fill="#D22856">
                <use href="./img/sprite.svg#icon-twitter"></use>
              </svg>
              <span class="visually-hidden">Твиттер</span>
            </a>
          </li>

          <!-- Фейсбук -->
          <li class="social__item">
            <a class="social__link" href="https://www.facebook.com" aria-label="Facebook">
              <svg class="social__icon" width="9" height="18" fill="#D22856">
                <use href="./img/sprite.svg#icon-facebook"></use>
              </svg>
              <span class="visually-hidden">Фейсбук</span>
            </a>
          </li>

          <!-- Ютуб -->
          <li class="social__item">
            <a class="social__link" href="https://www.youtube.com" aria-label="Youtube">
              <svg class="social__icon" width="15" height="13" fill="#D22856">
                <use href="./img/sprite.svg#icon-youtube"></use>
              </svg>
              <span class="visually-hidden">Ютуб</span>
            </a>
          </li>
        </ul>
      </div>
      <div class="page-footer__developed">
        <span class="page-footer__text">Разработано</span>
        <a href="https://htmlacademy.ru/intensive/adaptive"
          aria-label="Лендинг интенсива «HTML и CSS. Адаптивная вёрстка и автоматизация».">
          <svg class="page-footer__icon-htmlacademy" width="27" height="34" fill="#D22856">
            <use href="./img/sprite.svg#icon-htmlacademy"></use>
          </svg>
        </a>
      </div>
    </div>
  </footer>

  {% block modal %}{% endblock %}

  <script src="./js/main.js"></script>
</body>
</html>
